<resources>

    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/scheme_tab_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/scheme_tab_primary_dark</item>

        <item name="colorAccent">@color/scheme_tab_accent</item>

        <item name="android:textColorPrimary">@color/app_default_text</item>

        <item name="android:textColorSecondary">@color/app_default_secondary_text</item>

        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
    <style name="AppBaseTheme" parent="Base.Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="StatsRow">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>