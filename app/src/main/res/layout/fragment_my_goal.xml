<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/fragment_my_goal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="My Savings Goal "
            android:textColor="@color/cerulean"
            android:textSize="30dp"
            android:gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/fragment_my_goal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Bahamas Vacation"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/fragment_my_goal_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$5000"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/fragment_my_goal_progress_gained"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Progress toward goal: $2798/$5000"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/fragment_my_goal_progress_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Progress remaining: $2202"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/fragment_my_goal_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Team - Feel free to add content or give me ideas!"
            android:textSize="16dp"
            />


    </LinearLayout>
</ScrollView>